<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="kp.project.brainteaser.MainMenu">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/background"
        android:fitsSystemWindows="true">

        <Button
            android:id="@+id/dummy_button"
            style="@android:style/Widget.Holo.Button.Toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:elevation="0dp"
            android:text="@string/dummy_button"
            android:textAllCaps="false"
            tools:ignore="UnusedAttribute" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/dummy_button"
            android:layout_alignLeft="@+id/dummy_button"
            android:layout_alignStart="@+id/dummy_button"
            android:text="@string/dummytext"
            android:textColor="@android:color/background_dark"
            android:textSize="32sp" />

    </RelativeLayout>

</RelativeLayout>
